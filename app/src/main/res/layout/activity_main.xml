<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="45dp">

    <!-- Cabeçalho com Título e Ícone -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poupança"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Logotipo da Aplicação -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        />

    <!-- Campo Valor Inicial -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor Inicial:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor em R$: Ex: 1700.00"
        android:inputType="numberDecimal"/>

    <!-- Campo Aplicação Mensal -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicação mensal:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: 100.00"
        android:inputType="numberDecimal"/>

    <!-- Campo Tempo da Aplicação -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempo da aplicação:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Em meses"
        android:inputType="number"/>

    <!-- Campo Taxa -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taxa:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: 0.02"
        android:inputType="numberDecimal"/>

    <!-- Botão Calcular -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/white"/>
</LinearLayout>
